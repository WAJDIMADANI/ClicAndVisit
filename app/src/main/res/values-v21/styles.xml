<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="alertDialogTheme">@style/AppCompatAlertDialogStyle</item>
        <item name="android:textColor">@color/black_basic</item>

        <item name="android:navigationBarColor">@color/black_basic</item>
        <item name="android:windowBackground">@color/white_basic</item>

    </style>

    <style name="AppThemeStatusBarRed" parent="@style/AppTheme">
        <item name="android:statusBarColor">@color/color_primary</item>
    </style>

    <style name="AppTheme.Transparent" parent="AppTheme">
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>


</resources>