<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="bottomsheet"
            type="com.clickandvisit.ui.shared.bottomsheet.CustomSignUpBottomSheet" />


        <variable
            name="name"
            type="String" />

        <variable
            name="number"
            type="String" />

        <variable
            name="expDate"
            type="String" />

        <variable
            name="cvv"
            type="String" />


    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_global_36dp">

        <RelativeLayout
            android:id="@+id/rlHeader"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="@dimen/dimen_40dp"
                android:layout_height="@dimen/dimen_40dp"
                android:background="@drawable/ic_back"
                app:onClickWithDebounce="@{() ->bottomsheet.dismiss()}" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margin_global_6dp"
                android:fontFamily="@font/poppins_semi_bold"
                android:gravity="center_horizontal"
                android:text="@string/card_add_card"
                android:textColor="@color/color_primary"
                android:textSize="@dimen/font_15sp" />

        </RelativeLayout>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etCardName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_global_12dp"
            android:background="@drawable/round_grey_background"
            android:fontFamily="@font/poppins_medium"
            android:gravity="start"
            android:hint="@string/card_name"
            android:inputType="text"
            android:text="@{name}"
            android:padding="@dimen/padding_global_13dp"
            android:textColor="@color/black"
            android:textCursorDrawable="@drawable/edit_cursor_color"
            android:textSize="@dimen/font_15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rlHeader" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etCardNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_global_18dp"
            android:background="@drawable/round_grey_background"
            android:fontFamily="@font/poppins_medium"
            android:gravity="start"
            android:hint="@string/card_number"
            android:inputType="text"
            android:text="@{number}"
            android:padding="@dimen/padding_global_13dp"
            android:textColor="@color/black"
            android:textCursorDrawable="@drawable/edit_cursor_color"
            android:textSize="@dimen/font_15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etCardName" />

        <LinearLayout
            android:id="@+id/llCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etCardNumber">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etCardDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_global_18dp"
                android:layout_marginEnd="@dimen/padding_global_16dp"
                android:layout_weight="1"
                android:text="@{expDate}"
                android:background="@drawable/round_grey_background"
                android:fontFamily="@font/poppins_medium"
                android:gravity="start"
                android:hint="@string/card_date"
                android:inputType="text"
                android:padding="@dimen/padding_global_13dp"
                android:textColor="@color/black"
                android:textCursorDrawable="@drawable/edit_cursor_color"
                android:textSize="@dimen/font_15sp" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etCardCVV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_global_18dp"
                android:layout_weight="1"
                android:background="@drawable/round_grey_background"
                android:fontFamily="@font/poppins_medium"
                android:gravity="start"
                android:text="@{cvv}"
                android:hint="@string/card_cvv"
                android:inputType="text"
                android:padding="@dimen/padding_global_13dp"
                android:textColor="@color/black"
                android:textCursorDrawable="@drawable/edit_cursor_color"
                android:textSize="@dimen/font_15sp" />

        </LinearLayout>

        <com.clickandvisit.ui.shared.view.CustomButton
            android:id="@+id/btnCardAdd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center_vertical|end"
            android:layout_marginTop="@dimen/margin_global_29dp"
            android:layout_marginBottom="@dimen/margin_global_36dp"
            android:background="@drawable/ic_button_background"
            android:fontFamily="@font/poppins_semi_bold"
            android:text="@string/card_Add"
            android:textAllCaps="false"
            android:textColor="@color/white_basic"
            android:textSize="@dimen/font_18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/llCard" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
