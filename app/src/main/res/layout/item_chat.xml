    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/padding_global_30dp"
        android:paddingStart="@dimen/padding_global_36dp"
        android:paddingEnd="@dimen/padding_global_36dp">
        <!--app:onClickWithDebounce="@{()->listener.onItemClicked(delivery)}"-->

        <com.clickandvisit.ui.shared.view.CustomCircleImageView
            android:id="@+id/ivChatUserPhoto"
            android:layout_width="@dimen/dimen_40dp"
            android:layout_height="@dimen/dimen_40dp"
            android:background="@drawable/ic_chat_profile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvChatUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_global_12dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Cyril XX"
            android:textColor="@color/black_basic"
            android:textSize="@dimen/font_16sp"
            app:layout_constraintStart_toEndOf="@+id/ivChatUserPhoto"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvCityDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_global_12dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Lyon - Juin 2022"
            android:textColor="@color/chat_subtitle_color"
            android:textSize="@dimen/font_12sp"
            app:layout_constraintStart_toEndOf="@+id/ivChatUserPhoto"
            app:layout_constraintTop_toBottomOf="@+id/tvChatUserName" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvChatLastMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_global_20dp"
            android:fontFamily="@font/poppins_regular"
            android:text="Le Lorem Ipsum est simplement du faux texte employÃ© dans la composition et la mise en page avant impression."
            android:textColor="@color/black_basic"
            android:textSize="@dimen/font_12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivChatUserPhoto" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
