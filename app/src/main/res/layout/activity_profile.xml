<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout">

    <data>

        <import type="android.view.View" />

        <variable
            name="picasso"
            type="com.squareup.picasso.Picasso" />

        <variable
            name="viewModel"
            type="com.clickandvisit.ui.user.profile.ProfileViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white_basic"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:background="@color/black">

                        <ImageView
                            android:id="@+id/ivBack"
                            android:layout_width="@dimen/dimen_25dp"
                            android:layout_height="@dimen/dimen_25dp"
                            android:layout_marginStart="@dimen/margin_global_36dp"
                            android:layout_marginTop="@dimen/margin_global_36dp"
                            android:background="@drawable/ic_back"
                            app:onClickWithDebounce="@{() ->viewModel.onBackClick()}" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/margin_global_36dp"
                            android:fontFamily="@font/poppins_semi_bold"
                            android:text="@string/profile_profile"
                            android:textColor="@color/white_basic"
                            android:textSize="@dimen/font_16sp" />

                        <ImageView
                            android:id="@+id/ivDelete"
                            android:layout_width="@dimen/dimen_25dp"
                            android:layout_height="@dimen/dimen_25dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="@dimen/margin_global_36dp"
                            android:layout_marginEnd="@dimen/margin_global_36dp"
                            android:background="@drawable/ic_baseline_delete"
                            app:onClickWithDebounce="@{() ->viewModel.onDeleteClick()}" />

                    </RelativeLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_global_10dp"
                        android:background="@drawable/ic_profile_header">

                        <com.clickandvisit.ui.shared.view.CustomCircleImageView
                            android:id="@+id/customCircleImageView"
                            android:layout_width="@dimen/dimen_150dp"
                            android:layout_height="@dimen/dimen_150dp"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center_horizontal"
                            app:imageUri="@{viewModel.photoUri}"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:onClickWithDebounce="@{() ->viewModel.onImageClick()}"
                            app:picasso="@{picasso}" />

                        <com.clickandvisit.ui.shared.view.CustomCircleImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:background="@drawable/ic_circle_back_gray"
                            app:layout_constraintBottom_toBottomOf="@+id/customCircleImageView"
                            app:layout_constraintEnd_toEndOf="@+id/customCircleImageView" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <!--//TODO: if pro-->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/margin_global_36dp"
                        android:layout_marginEnd="@dimen/margin_global_36dp"
                        android:background="@color/white_basic"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvSignupCivility"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_global_10dp"
                            android:fontFamily="@font/poppins_bold"
                            android:text="@string/signup_civility"
                            android:textColor="@color/black_basic"
                            android:textSize="@dimen/font_16sp"
                            android:visibility="@{viewModel.checkedPro ? View.GONE : View.VISIBLE}"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/appCompatImageView" />

                        <RadioGroup
                            android:id="@+id/rgCivilityType"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/margin_global_15dp"
                            android:orientation="horizontal"
                            android:visibility="@{viewModel.checkedPro ? View.GONE : View.VISIBLE}">

                            <RadioButton
                                android:id="@+id/rbCivilityM"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginEnd="@dimen/margin_global_30dp"
                                android:checked="@{viewModel.checkedM}"
                                android:fontFamily="@font/poppins_regular"
                                android:onClick="onMClick"
                                android:padding="4dp"
                                android:text="@string/signup_m"
                                android:textAlignment="center"
                                android:textSize="@dimen/font_16sp" />

                            <RadioButton
                                android:id="@+id/rbCivilityF"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:checked="@{viewModel.checkedF}"
                                android:fontFamily="@font/poppins_regular"
                                android:onClick="onFClick"
                                android:padding="4dp"
                                android:text="@string/signup_f"
                                android:textAlignment="center"
                                android:textSize="@dimen/font_16sp" />

                        </RadioGroup>


                        <com.clickandvisit.ui.shared.view.CustomTextInputLayout
                            android:id="@+id/customTextInputLayoutSignUpUser"
                            style="@style/InputLayout.AppStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:errorBackground="@{viewModel.lastNameFieldError}">

                            <com.clickandvisit.ui.shared.view.CustomTextInputEditText
                                android:id="@+id/customTextInputEditTextSignUpUser"
                                style="@style/InputEditText.AppStyle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@{viewModel.checkedPro ? @string/signup_pro_siret : @string/signup_lastname}"
                                android:inputType="textPersonName"
                                android:text="@={viewModel.lastName}" />

                        </com.clickandvisit.ui.shared.view.CustomTextInputLayout>


                        <com.clickandvisit.ui.shared.view.CustomTextInputLayout
                            android:id="@+id/customTextInputLayoutSignUpCin"
                            style="@style/InputLayout.AppStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:errorBackground="@{viewModel.firstNameFieldError}">

                            <com.clickandvisit.ui.shared.view.CustomTextInputEditText
                                android:id="@+id/customTextInputEditTextSignUpCin"
                                style="@style/InputEditText.AppStyle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@{viewModel.checkedPro ? @string/signup_pro_social : @string/signup_firstname}"
                                android:text="@={viewModel.firstName}" />

                        </com.clickandvisit.ui.shared.view.CustomTextInputLayout>

                        <com.clickandvisit.ui.shared.view.CustomTextInputLayout
                            android:id="@+id/customTextInputLayoutSignInEmail"
                            style="@style/InputLayout.AppStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:errorBackground="@{viewModel.emailFieldError}">

                            <com.clickandvisit.ui.shared.view.CustomTextInputEditText
                                android:id="@+id/customTextInputEditTextSignInEmail"
                                style="@style/InputEditText.AppStyle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/signin_mail"
                                android:inputType="textEmailAddress"
                                android:text="@={viewModel.email}" />

                        </com.clickandvisit.ui.shared.view.CustomTextInputLayout>

                        <com.clickandvisit.ui.shared.view.CustomTextInputLayout
                            android:id="@+id/customTextInputLayoutSignUpPhone"
                            style="@style/InputLayout.AppStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:errorBackground="@{viewModel.phoneFieldError}">

                            <com.clickandvisit.ui.shared.view.CustomTextInputEditText
                                android:id="@+id/customTextInputEditTextSignUpPhone"
                                style="@style/InputEditText.AppStyle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/signup_phone"
                                android:inputType="phone"
                                android:text="@={viewModel.phone}" />

                        </com.clickandvisit.ui.shared.view.CustomTextInputLayout>


                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvSignInVisitor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_global_2dp"
                            android:fontFamily="@font/poppins_medium"
                            android:text="@string/profile_change_password"
                            android:textColor="@color/blue_light"
                            android:textSize="@dimen/font_14sp"
                            android:visibility="gone"
                            app:onClickWithDebounce="@{() ->viewModel.onChangePasswordClicked()}" />

                        <com.clickandvisit.ui.shared.view.CustomButton
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_global_29dp"
                            android:layout_marginBottom="@dimen/margin_global_36dp"
                            android:background="@drawable/ic_button_background"
                            android:fontFamily="@font/poppins_semi_bold"
                            android:text="@string/global_save"
                            android:textAllCaps="false"
                            android:textColor="@color/white_basic"
                            android:textSize="@dimen/font_18sp"
                            app:onClickWithDebounce="@{() ->viewModel.onSaveClicked()}" />

                    </LinearLayout>

                </LinearLayout>

            </ScrollView>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>