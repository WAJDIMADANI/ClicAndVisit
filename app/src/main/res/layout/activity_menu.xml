<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    tools:context=".ui.menu.MenuActivity">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.clickandvisit.ui.menu.MenuViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_primary"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="@dimen/dimen_40dp"
                        android:layout_height="@dimen/dimen_40dp"
                        android:layout_marginStart="@dimen/margin_global_36dp"
                        android:layout_marginTop="@dimen/margin_global_36dp"
                        android:layout_marginEnd="@dimen/margin_global_10dp"
                        android:background="@drawable/ic_back_white"
                        app:onClickWithDebounce="@{() ->viewModel.onBackClick()}" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/margin_global_36dp"
                    android:layout_marginTop="@dimen/margin_global_36dp"
                    android:layout_marginEnd="@dimen/margin_global_36dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/dimen_40dp"
                        android:layout_height="@dimen/dimen_40dp"
                        android:background="@drawable/ic_photo_white" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_global_10dp"
                        android:fontFamily="@font/poppins_semi_bold"
                        android:gravity="center"
                        android:text="User name"
                        android:textColor="@color/white_basic"
                        android:textSize="@dimen/font_13sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvIntroTitle" />


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_50dp"
                        android:layout_marginTop="@dimen/dimen_20dp"
                        android:background="@drawable/ic_search_edit_background"
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/dimen_14dp"
                        android:paddingEnd="@dimen/dimen_19dp"
                        app:onClickWithDebounce="@{() ->viewModel.onAdsClick()}">

                        <ImageView
                            android:id="@+id/imageView0"
                            android:layout_width="@dimen/margin_global_21dp"
                            android:layout_height="@dimen/margin_global_21dp"
                            android:background="@drawable/ic_box_on"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/appCompatTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimen_10dp"
                            android:fontFamily="@font/poppins_medium"
                            android:text="@string/menu_ads"
                            android:textColor="@color/black_basic"
                            android:textSize="@dimen/font_13sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/imageView0"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:layout_width="@dimen/margin_global_18dp"
                            android:layout_height="@dimen/margin_global_18dp"
                            android:background="@drawable/ic_go"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_50dp"
                        android:layout_marginTop="@dimen/dimen_20dp"
                        android:background="@drawable/ic_search_edit_background"
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/dimen_14dp"
                        android:paddingEnd="@dimen/dimen_19dp"
                        app:onClickWithDebounce="@{() ->viewModel.onPackageClick()}">

                        <ImageView
                            android:id="@+id/imageView1"
                            android:layout_width="@dimen/margin_global_21dp"
                            android:layout_height="@dimen/margin_global_21dp"
                            android:background="@drawable/ic_timer"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimen_10dp"
                            android:fontFamily="@font/poppins_medium"
                            android:text="@string/menu_package"
                            android:textColor="@color/black_basic"
                            android:textSize="@dimen/font_13sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/imageView1"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:layout_width="@dimen/margin_global_18dp"
                            android:layout_height="@dimen/margin_global_18dp"
                            android:background="@drawable/ic_go"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_50dp"
                        android:layout_marginTop="@dimen/dimen_20dp"
                        android:background="@drawable/ic_search_edit_background"
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/dimen_14dp"
                        android:paddingEnd="@dimen/dimen_19dp"
                        app:onClickWithDebounce="@{() ->viewModel.onProfileClick()}">

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="@dimen/margin_global_21dp"
                            android:layout_height="@dimen/margin_global_21dp"
                            android:background="@drawable/ic_user"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimen_10dp"
                            android:fontFamily="@font/poppins_medium"
                            android:text="@string/menu_profile"
                            android:textColor="@color/black_basic"
                            android:textSize="@dimen/font_13sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/imageView2"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:layout_width="@dimen/margin_global_18dp"
                            android:layout_height="@dimen/margin_global_18dp"
                            android:background="@drawable/ic_go"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_50dp"
                        android:layout_marginTop="@dimen/dimen_20dp"
                        android:background="@drawable/ic_search_edit_background"
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/dimen_14dp"
                        android:paddingEnd="@dimen/dimen_19dp"
                        app:onClickWithDebounce="@{() ->viewModel.onAlertsClick()}">

                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="@dimen/margin_global_21dp"
                            android:layout_height="@dimen/margin_global_21dp"
                            android:background="@drawable/ic_notif"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimen_10dp"
                            android:fontFamily="@font/poppins_medium"
                            android:text="@string/menu_alerts"
                            android:textColor="@color/black_basic"
                            android:textSize="@dimen/font_13sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/imageView3"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:layout_width="@dimen/margin_global_18dp"
                            android:layout_height="@dimen/margin_global_18dp"
                            android:background="@drawable/ic_go"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_50dp"
                        android:layout_marginTop="@dimen/dimen_20dp"
                        android:background="@drawable/ic_search_edit_background"
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/dimen_14dp"
                        android:paddingEnd="@dimen/dimen_19dp"
                        app:onClickWithDebounce="@{() ->viewModel.onPaymentClick()}">

                        <ImageView
                            android:id="@+id/imageView4"
                            android:layout_width="@dimen/margin_global_21dp"
                            android:layout_height="@dimen/margin_global_21dp"
                            android:background="@drawable/ic_peyment_card"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimen_10dp"
                            android:fontFamily="@font/poppins_medium"
                            android:text="@string/menu_peyment_mode"
                            android:textColor="@color/black_basic"
                            android:textSize="@dimen/font_13sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/imageView4"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:layout_width="@dimen/margin_global_18dp"
                            android:layout_height="@dimen/margin_global_18dp"
                            android:background="@drawable/ic_go"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_50dp"
                        android:layout_marginTop="@dimen/dimen_20dp"
                        android:background="@drawable/ic_search_edit_background"
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/dimen_14dp"
                        android:paddingEnd="@dimen/dimen_19dp"
                        app:onClickWithDebounce="@{() ->viewModel.onChatClick()}">

                        <ImageView
                            android:id="@+id/imageView5"
                            android:layout_width="@dimen/margin_global_21dp"
                            android:layout_height="@dimen/margin_global_21dp"
                            android:background="@drawable/ic_chat"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimen_10dp"
                            android:fontFamily="@font/poppins_medium"
                            android:text="@string/menu_chat"
                            android:textColor="@color/black_basic"
                            android:textSize="@dimen/font_13sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/imageView5"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:layout_width="@dimen/margin_global_18dp"
                            android:layout_height="@dimen/margin_global_18dp"
                            android:background="@drawable/ic_go"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_50dp"
                        android:layout_marginTop="@dimen/dimen_20dp"
                        android:background="@drawable/ic_search_edit_background"
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/dimen_14dp"
                        android:paddingEnd="@dimen/dimen_19dp"
                        app:onClickWithDebounce="@{() ->viewModel.onParamClick()}">

                        <ImageView
                            android:id="@+id/imageView6"
                            android:layout_width="@dimen/margin_global_21dp"
                            android:layout_height="@dimen/margin_global_21dp"
                            android:background="@drawable/ic_param"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimen_10dp"
                            android:fontFamily="@font/poppins_medium"
                            android:text="@string/menu_help"
                            android:textColor="@color/black_basic"
                            android:textSize="@dimen/font_13sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/imageView6"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:layout_width="@dimen/margin_global_18dp"
                            android:layout_height="@dimen/margin_global_18dp"
                            android:background="@drawable/ic_go"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</layout>