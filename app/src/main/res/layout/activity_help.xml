<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    tools:context=".ui.menu.help.HelpActivity">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.foodline.ui.menu.help.HelpViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clHomeHeaderOne"
                    android:layout_width="match_parent"
                    android:layout_height="112dp"
                    android:padding="@dimen/padding_global_36dp"
                    android:background="@drawable/ic_home_header_background"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <RelativeLayout
                        android:id="@+id/rlBack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:layout_width="@dimen/dimen_40dp"
                            android:layout_height="@dimen/dimen_40dp"
                            android:background="@drawable/ic_back_white"
                            app:onClickWithDebounce="@{() ->viewModel.onBackClick()}" />

                    </RelativeLayout>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvHomeTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_semi_bold"
                        android:text="@string/menu_help"
                        android:textColor="@color/white_basic"
                        android:textSize="@dimen/font_15sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/rlBack"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/margin_global_30dp"
                    android:layout_marginTop="@dimen/margin_global_36dp"
                    android:layout_marginEnd="@dimen/margin_global_30dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_50dp"
                        android:layout_marginTop="@dimen/dimen_20dp"
                        android:background="@drawable/edit_text_border"
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/dimen_14dp"
                        android:paddingEnd="@dimen/dimen_19dp"
                        app:onClickWithDebounce="@{() ->viewModel.onHomeClick()}">

                        <ImageView
                            android:id="@+id/imageView0"
                            android:layout_width="@dimen/margin_global_21dp"
                            android:layout_height="@dimen/margin_global_21dp"
                            android:background="@drawable/ic_reset_password"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/appCompatTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimen_10dp"
                            android:fontFamily="@font/poppins_medium"
                            android:text="@string/global_change_password"
                            android:textColor="@color/black_basic"
                            android:textSize="@dimen/font_13sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/imageView0"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:layout_width="@dimen/margin_global_18dp"
                            android:layout_height="@dimen/margin_global_18dp"
                            android:background="@drawable/ic_go"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_50dp"
                        android:layout_marginTop="@dimen/dimen_20dp"
                        android:background="@drawable/edit_text_border"
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/dimen_14dp"
                        android:paddingEnd="@dimen/dimen_19dp"
                        app:onClickWithDebounce="@{() ->viewModel.onPackageClick()}">

                        <ImageView
                            android:id="@+id/imageView1"
                            android:layout_width="@dimen/margin_global_21dp"
                            android:layout_height="@dimen/margin_global_21dp"
                            android:background="@drawable/ic_language"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimen_10dp"
                            android:fontFamily="@font/poppins_medium"
                            android:text="@string/global_language"
                            android:textColor="@color/black_basic"
                            android:textSize="@dimen/font_13sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/imageView1"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:layout_width="@dimen/margin_global_18dp"
                            android:layout_height="@dimen/margin_global_18dp"
                            android:background="@drawable/ic_go"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_50dp"
                        android:layout_marginTop="@dimen/dimen_20dp"
                        android:background="@drawable/edit_text_border"
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/dimen_14dp"
                        android:paddingEnd="@dimen/dimen_19dp"
                        app:onClickWithDebounce="@{() ->viewModel.onProfileClick()}">

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="@dimen/margin_global_21dp"
                            android:layout_height="@dimen/margin_global_21dp"
                            android:background="@drawable/ic_cgu"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimen_10dp"
                            android:fontFamily="@font/poppins_medium"
                            android:text="@string/global_cgu"
                            android:textColor="@color/black_basic"
                            android:ellipsize="end"
                            android:textSize="@dimen/font_13sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/imageView2"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:layout_width="@dimen/margin_global_18dp"
                            android:layout_height="@dimen/margin_global_18dp"
                            android:background="@drawable/ic_go"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_50dp"
                        android:layout_marginTop="@dimen/dimen_20dp"
                        android:background="@drawable/edit_text_border"
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/dimen_14dp"
                        android:paddingEnd="@dimen/dimen_19dp"
                        app:onClickWithDebounce="@{() ->viewModel.onAdsClick()}">

                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="@dimen/margin_global_21dp"
                            android:layout_height="@dimen/margin_global_21dp"
                            android:background="@drawable/ic_pc"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimen_10dp"
                            android:fontFamily="@font/poppins_medium"
                            android:text="@string/global_pc"
                            android:textColor="@color/black_basic"
                            android:textSize="@dimen/font_13sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/imageView3"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:layout_width="@dimen/margin_global_18dp"
                            android:layout_height="@dimen/margin_global_18dp"
                            android:background="@drawable/ic_go"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_50dp"
                        android:layout_marginTop="@dimen/dimen_20dp"
                        android:background="@drawable/edit_text_border"
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/dimen_14dp"
                        android:paddingEnd="@dimen/dimen_19dp"
                        app:onClickWithDebounce="@{() ->viewModel.onPeymentClick()}">

                        <ImageView
                            android:id="@+id/imageView4"
                            android:layout_width="@dimen/margin_global_21dp"
                            android:layout_height="@dimen/margin_global_21dp"
                            android:background="@drawable/ic_ccm"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimen_10dp"
                            android:fontFamily="@font/poppins_medium"
                            android:text="@string/global_how_it_works"
                            android:textColor="@color/black_basic"
                            android:textSize="@dimen/font_13sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/imageView4"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:layout_width="@dimen/margin_global_18dp"
                            android:layout_height="@dimen/margin_global_18dp"
                            android:background="@drawable/ic_go"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_50dp"
                        android:layout_marginTop="@dimen/dimen_20dp"
                        android:background="@drawable/edit_text_border"
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/dimen_14dp"
                        android:paddingEnd="@dimen/dimen_19dp"
                        app:onClickWithDebounce="@{() ->viewModel.onChatClick()}">

                        <ImageView
                            android:id="@+id/imageView5"
                            android:layout_width="@dimen/margin_global_21dp"
                            android:layout_height="@dimen/margin_global_21dp"
                            android:background="@drawable/ic_contact"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimen_10dp"
                            android:fontFamily="@font/poppins_medium"
                            android:text="@string/global_contact"
                            android:textColor="@color/black_basic"
                            android:textSize="@dimen/font_13sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/imageView5"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:layout_width="@dimen/margin_global_18dp"
                            android:layout_height="@dimen/margin_global_18dp"
                            android:background="@drawable/ic_go"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_50dp"
                        android:layout_marginTop="@dimen/dimen_20dp"
                        android:background="@drawable/edit_text_border"
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/dimen_14dp"
                        android:paddingEnd="@dimen/dimen_19dp"
                        app:onClickWithDebounce="@{() ->viewModel.onParamClick()}">

                        <ImageView
                            android:id="@+id/imageView6"
                            android:layout_width="@dimen/margin_global_21dp"
                            android:layout_height="@dimen/margin_global_21dp"
                            android:background="@drawable/ic_disc"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimen_10dp"
                            android:fontFamily="@font/poppins_medium"
                            android:text="@string/global_sign_out"
                            android:textColor="@color/black_basic"
                            android:textSize="@dimen/font_13sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/imageView6"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:layout_width="@dimen/margin_global_18dp"
                            android:layout_height="@dimen/margin_global_18dp"
                            android:background="@drawable/ic_go"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</layout>