<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.clickandvisit.ui.shared.view.CustomButton
            android:id="@+id/pick_picture"
            style="@style/TextView.ActionSheetTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/global_pick_picture"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.clickandvisit.ui.shared.view.CustomButton
            android:id="@+id/take_picture"
            style="@style/TextView.ActionSheetTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/global_take_picture"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pick_picture" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>