<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.clickandvisit.ui.home.menu.myads.MyAdsViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_global_10dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="190dp"
                android:layout_height="40dp"
                android:background="@color/black"
                android:fontFamily="@font/poppins_regular"
                android:gravity="center"
                android:text="Annonces en ligne (10)"
                android:textColor="@color/white_basic"
                android:textSize="@dimen/font_12sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="190dp"
                android:layout_height="40dp"
                android:background="@color/white_basic"
                android:fontFamily="@font/poppins_regular"
                android:gravity="center"
                android:text="Annonces en ligne (10)"
                android:textColor="@color/black"
                android:textSize="@dimen/font_12sp" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvAds"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivFilter"
            tools:listitem="@layout/item_ads" />

        <!--app:data="@{viewModel.deliveriesList}"-->

        <include layout="@layout/item_ads" />

        <include layout="@layout/item_ads" />

        <include layout="@layout/item_ads" />
    </LinearLayout>
</layout>