<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    tools:context=".ui.home.HomeActivity">

    <data>

        <variable
            name="viewModel"
            type="com.foodline.ui.home.HomeViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_primary">

        <RelativeLayout
            android:id="@+id/rlMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="@dimen/dimen_40dp"
                android:layout_height="@dimen/dimen_40dp"
                android:layout_marginStart="@dimen/margin_global_36dp"
                android:layout_marginTop="@dimen/margin_global_36dp"
                android:background="@drawable/ic_menu"
                app:onClickWithDebounce="@{() ->viewModel.onMenuClick()}" />

        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_250dp"
            android:layout_marginTop="@dimen/margin_global_50dp"
            android:src="@drawable/ic_home_img"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rlMenu" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:background="@drawable/ic_home_footer_background"
            android:orientation="vertical"
            android:padding="@dimen/padding_global_36dp"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvIntroTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:text="@string/home_welcome"
                android:textColor="@color/black_basic"
                android:textSize="@dimen/font_25sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/appCompatImageView" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="@string/home_sub_title"
                android:textColor="@color/color_text_body"
                android:textSize="@dimen/font_15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvIntroTitle" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_50dp"
                android:layout_marginTop="@dimen/dimen_15dp"
                android:background="@drawable/ic_button_background"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dimen_18dp"
                android:paddingEnd="@dimen/dimen_18dp"
                app:onClickWithDebounce="@{() ->viewModel.onSendClick()}">

                <ImageView
                    android:id="@+id/imageView0"
                    android:layout_width="@dimen/margin_global_21dp"
                    android:layout_height="@dimen/margin_global_21dp"
                    android:background="@drawable/ic_send"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/appCompatTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_18dp"
                    android:fontFamily="@font/poppins_semi_bold"
                    android:text="@string/home_send_package"
                    android:textColor="@color/white_basic"
                    android:textSize="@dimen/font_15sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/imageView0"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:layout_width="@dimen/margin_global_25dp"
                    android:layout_height="@dimen/margin_global_25dp"
                    android:background="@drawable/ic_go"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_50dp"
                android:layout_marginTop="@dimen/dimen_15dp"
                android:background="@drawable/ic_button_background"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dimen_18dp"
                android:paddingEnd="@dimen/dimen_18dp"
                app:onClickWithDebounce="@{() ->viewModel.onTransportClick()}">

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="@dimen/margin_global_21dp"
                    android:layout_height="@dimen/margin_global_21dp"
                    android:background="@drawable/ic_box_off"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_18dp"
                    android:fontFamily="@font/poppins_semi_bold"
                    android:text="@string/home_recive_package"
                    android:textColor="@color/white_basic"
                    android:textSize="@dimen/font_15sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/imageView1"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:layout_width="@dimen/margin_global_25dp"
                    android:layout_height="@dimen/margin_global_25dp"
                    android:background="@drawable/ic_go"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>