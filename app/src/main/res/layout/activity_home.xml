<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.clickandvisit.ui.home.HomeViewModel" />

    </data>

    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawerLayoutHome"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:openDrawer="start">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayoutHomeContent"
            android:layout_width="match_parent"
            android:background="@color/gray_home_background"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayoutHomeHeader"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_50dp"
                android:paddingStart="@dimen/margin_global_20dp"
                android:paddingEnd="@dimen/margin_global_20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/toolbarHome">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvPropertyListCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_global_15dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="@{viewModel.listCount}"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_18sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <ImageView
                    android:id="@+id/ivFilter"
                    android:layout_width="@dimen/dimen_30dp"
                    android:layout_height="@dimen/dimen_30dp"
                    android:src="@drawable/ic_home_filter"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvSearch"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayoutHomeHeader"
                app:recyclerViewData="@{viewModel.list}"
                tools:listitem="@layout/item_favourite" />


            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="@dimen/dimen_50dp"
                android:layout_marginBottom="@dimen/margin_global_20dp"
                android:background="@color/color_accent"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:onClickWithDebounce="@{() ->viewModel.onMapsClicked()}">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/dimen_24dp"
                    android:layout_height="@dimen/dimen_22dp"
                    android:layout_marginEnd="@dimen/padding_global_5dp"
                    android:src="@drawable/ic_home_map" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_global_2dp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="@string/home_card"
                    android:textColor="@color/white_basic"
                    android:textSize="@dimen/dimen_16sp" />

            </LinearLayout>

            <fragment
                android:id="@+id/fragmentHomeNavHost"
                android:name="androidx.navigation.fragment.NavHostFragment"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:defaultNavHost="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/toolbarHome"
                app:navGraph="@navigation/mobile_navigation" />

            <com.clickandvisit.ui.shared.view.CustomToolbar
                android:id="@+id/toolbarHome"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:onActionClicked="@{viewModel}" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.navigation.NavigationView
            android:id="@+id/navigationViewHome"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="@color/white_basic"
            app:headerLayout="@layout/nav_header_home"
            app:itemBackground="@drawable/menu_background_color"
            app:itemIconTint="@drawable/menu_text_color"
            app:itemMaxLines="1"
            app:itemTextAppearance="@style/NavigationViewStyle"
            app:itemTextColor="@drawable/menu_text_color"
            app:menu="@menu/activity_main_drawer"
            app:theme="@style/NavigationViewStyle">

            <include
                layout="@layout/nav_header_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top" />

        </com.google.android.material.navigation.NavigationView>

    </androidx.drawerlayout.widget.DrawerLayout>

</layout>