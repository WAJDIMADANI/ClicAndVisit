<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="10dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/padding_global_10dp"
        android:layout_marginBottom="@dimen/padding_global_10dp"
        android:src="@drawable/ic_logo_black" />

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:rating="5" />

    <com.clickandvisit.ui.shared.view.CustomButton
        android:id="@+id/customButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/margin_global_30dp"
        android:background="@drawable/ic_button_background"
        android:fontFamily="@font/poppins_semi_bold"
        android:text="@string/ads_continue"
        android:textAllCaps="false"
        android:textColor="@color/white_basic"
        android:textSize="@dimen/font_18sp" />


</androidx.appcompat.widget.LinearLayoutCompat>