<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout">

    <data>

        <variable
            name="viewModel"
            type="com.clickandvisit.ui.user.chat.conv.ConvViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rlHeader"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="@dimen/dimen_25dp"
                android:layout_height="@dimen/dimen_25dp"
                android:layout_marginStart="@dimen/margin_global_30dp"
                android:layout_marginTop="@dimen/margin_global_36dp"
                android:background="@drawable/ic_back"
                app:onClickWithDebounce="@{() ->viewModel.onBackClick()}" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margin_global_36dp"
                android:fontFamily="@font/poppins_semi_bold"
                android:text="@string/conv_header"
                android:textColor="@color/white_basic"
                android:textSize="@dimen/font_16sp" />

        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvUsers"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rlHeader"
            app:recyclerViewData="@{viewModel.list}"
            tools:listitem="@layout/item_conv" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/white_basic"
            android:gravity="center"
            android:paddingStart="@dimen/margin_global_36dp"
            android:paddingEnd="@dimen/margin_global_36dp"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etPriceMin"
                android:layout_width="200dp"
                android:layout_height="@dimen/dimen_50dp"
                android:layout_marginEnd="@dimen/margin_global_10dp"
                android:layout_weight="1"
                android:background="@drawable/ic_item_border"
                android:drawablePadding="@dimen/padding_global_10dp"
                android:fontFamily="@font/poppins_regular"
                android:hint="Ã‰crire votre message"
                android:paddingStart="@dimen/padding_global_10dp"
                android:text="@={viewModel.msg}"
                android:textColor="@color/black"
                android:textCursorDrawable="@drawable/edit_cursor_color"
                android:textSize="@dimen/font_13sp" />

            <com.clickandvisit.ui.shared.view.CustomButton
                android:layout_width="80dp"
                android:layout_height="@dimen/dimen_40dp"
                android:background="@drawable/ic_button_background"
                android:fontFamily="@font/poppins_bold"
                android:text="@string/chat_send"
                android:textAllCaps="true"
                android:textColor="@color/white_basic"
                android:textSize="@dimen/font_13sp"
                app:onClickWithDebounce="@{() ->viewModel.onSendClicked()}" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>