<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout">

    <data>

        <import type="android.view.View" />

        <variable
            name="picasso"
            type="com.squareup.picasso.Picasso" />

        <variable
            name="viewModel"
            type="com.clickandvisit.ui.home.menu.meet.MeetViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_basic"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvAdsMeetTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_global_25dp"
            android:layout_marginTop="@dimen/margin_global_25dp"
            android:layout_marginBottom="@dimen/margin_global_15dp"
            android:fontFamily="@font/poppins_bold"
            android:text="@string/meet_asked"
            android:textColor="@color/black"
            android:textSize="@dimen/font_16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvAdsHour" />

        <include layout="@layout/item_meet" />

        <include layout="@layout/item_meet" />

    </LinearLayout>

</layout>